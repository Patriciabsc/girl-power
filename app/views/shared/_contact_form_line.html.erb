
<div class="get-in-touch-line">
  <form class="contact-form-line">
    <div class="form-field col x-50">
      <input id="name" class="input-text" type="text" required>
      <label for="name" class="label">Nom</label>
    </div>

    <div class="form-field col x-50">
      <input id="entreprise" class="input-text" type="text">
      <label for="entreprise" class="label">Entreprise</label>
    </div>

    <div class="form-field col x-50">
      <input id="email" class="input-text" type="text" required>
      <label for="email" class="label">Email</label>
    </div>

    <div class="form-field col x-100">
      <input id="message" class="input-text" type="text" required>
      <label for="message" class="label">Message</label>
    </div>

    <div class="form-field col x-100 align-center">
       <input class="submit-btn" type="submit" value="Envoyer">
    </div>

  </form>
</div>

